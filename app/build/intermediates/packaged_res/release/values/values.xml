<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="color" name="colorBackground"/>
    <attr format="color" name="colorError"/>
    <attr format="color" name="colorOnError"/>
    <attr format="color" name="colorOnPrimary"/>
    <attr format="color" name="colorOnSecondary"/>
    <attr format="color" name="colorOnSurface"/>
    <attr format="color" name="colorPrimary"/>
    <attr format="color" name="colorPrimaryVariant"/>
    <attr format="color" name="colorSecondary"/>
    <attr format="color" name="colorSecondaryVariant"/>
    <attr format="color" name="colorSurface"/>
    <color name="purple_500">#6200EE</color>
    <color name="purple_700">#3700B3</color>
    <color name="teal_200">#03DAC5</color>
    <string name="app_name">AdForge</string>
    <style name="Theme.AdForge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
    <style name="Theme.AdForge.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#121212</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AdForge</item>
    </style>
    <style name="Theme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AdForge</item>
    </style>
</resources>