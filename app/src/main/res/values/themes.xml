<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme -->
    <style name="Theme.AdForge" parent="Theme.Material.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.SplashScreen" parent="Theme.Material.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AdForge</item>
    </style>
</resources>
