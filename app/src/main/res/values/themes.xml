<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base app theme -->
    <style name="Theme.AdForge" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher</item>
        
    </style>
</resources>
<!-- Ensure this is present only once -->
<style name="Theme.AdForge" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowSplashScreenBackground">@color/black</item>
    <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    <item name="android:windowSplashScreenIconBackgroundColor">@color/white</item>
    <item name="android:windowSplashScreenDuration">300</item>
    <item name="postSplashScreenTheme">@style/Theme.AdForge.Main</item>
</style>
